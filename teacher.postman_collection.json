        }
      }
    },
    {
      "name": "Reservar Horario",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "{{base_url}}/teacher/horario/reservar",
          "host": ["{{base_url}}"],
          "path": ["teacher","horario","reservar"]
        }
      }
    },
    {
      "name": "Ver Notas",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
